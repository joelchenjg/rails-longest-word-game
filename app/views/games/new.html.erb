<div class="container m-3">
<h1>New game</h1>

<ul class="list-inline">
<% @letters.each do |letter| %>
    <li class="list-inline-item alert alert-primary border border-dark shadow font-weight-bold"><%= letter %></li>
<% end %>
</ul>
<form action="/score" method="post">
    <label for="answer" class="width-100">What is the longest word you can find?</label>
    <div class="d-flex">
    <input type="text" class="form-control" id="answer" name="word" placeholder="Word">
    <input type="submit" value="Play">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
</form>
</div>
